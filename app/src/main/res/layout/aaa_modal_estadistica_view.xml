<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:background="@drawable/fondoinicio"
        android:padding="15dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAtos de estudiante"
            android:textStyle="bold"
            android:textColor="@color/adminU"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/digitalt"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:paddingHorizontal="3dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/nombreCompleto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="juan jorge castillo paredes "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:fontFamily="@font/digitalt"
                android:textSize="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:paddingHorizontal="3dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/edad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17 aÃ±os"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:fontFamily="@font/digitalt"
                android:textSize="20dp"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/pais"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="argentina "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:fontFamily="@font/digitalt"
                android:textSize="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:paddingHorizontal="3dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:id="@+id/ciudad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buenos Aires "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:fontFamily="@font/digitalt"
                android:textSize="20dp"
                />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="estadisticas"
            android:textStyle="bold"
            android:textColor="@color/adminU"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/digitalt"
            android:textSize="20dp"
            android:layout_marginVertical="5dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >

            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inicio_close_btn"
        android:layout_gravity="right"
        android:backgroundTint="@color/float_transparent"
        />
</FrameLayout>
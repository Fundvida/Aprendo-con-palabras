<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blackM">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/adminU"
                    android:textSize="20dp"
                    android:text="Tiempo a terminar el torneo "
                    android:layout_marginLeft="30dp"

                    />
                <TextView
                    android:id="@+id/tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/adminU"
                    android:textSize="20dp"
                    android:text="15 min. "
                    android:layout_marginLeft="30dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"

                android:gravity="center"
                android:background="@color/adminU"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Record Actual : "
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text=" 0  pts."
                    android:layout_marginLeft="30dp"

                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/adminU"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Cantidad de intentos : "
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/total_intentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text=" 0 "
                    android:layout_marginLeft="30dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/adminU"
                    android:textSize="20dp"
                    android:text="intentos Permitidos : "
                    android:layout_marginLeft="30dp"

                    />
                <TextView
                    android:id="@+id/intentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/adminU"
                    android:textSize="20dp"
                    android:text=" 0 "
                    android:layout_marginLeft="30dp"

                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/black"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="Fecha de inicio :"
                    android:layout_marginLeft="30dp"

                    />
                <TextView
                    android:id="@+id/fecha_inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="15/15/20204"
                    android:layout_marginLeft="30dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/azul_medianoche"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="fecha fin : "
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/fecha_fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text=" 05/15/2024"
                    android:layout_marginLeft="30dp"

                    />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="580dp"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/modal_user"
        android:backgroundTint="@color/adminU"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="mi estadistica del torneo"
            android:fontFamily="@font/digitalt"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="5dp"
            android:background="@color/white"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="550dp"
                    android:layout_height="match_parent"
                    android:text="no jugaste todavia."
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/digitalt"
                    android:gravity="center"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recy"
                    tools:listitem="@layout/uuu_adapter_torneo_estadistica"
                    />

            </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="cancelar"
            android:fontFamily="@font/digitalt"
            android:background="@drawable/buttonerror"
            android:textSize="20dp"
            android:drawableStart="@drawable/error_center_x"
            android:drawableTint="@color/white"
            android:paddingHorizontal="10dp"
            />
        <View
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/jugar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="jugar"
            android:fontFamily="@font/digitalt"
            android:background="@drawable/buttoncrear"
            android:textSize="20dp"
            android:drawableStart="@drawable/game"
            android:drawableTint="@color/white"
            android:paddingHorizontal="10dp"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.game.PruebaJuego_construir_oraciones_simples">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_silabas_simples_cristian"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="160dp"
            >
            <TextView
                android:id="@+id/tema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construir oraciones"
                android:textColor="@color/gamecolorazul"
                android:textStyle="bold"
                android:fontFamily="@font/digitalt"
                android:textSize="35dp"
                android:gravity="center"
                />




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ordena la oracion"
                    android:textStyle="bold"
                    android:fontFamily="@font/digitalt"
                    android:textColor="@color/gamecolorazul"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="20dp"
                        >
                        <ImageView
                            android:id="@+id/txtimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1"/>
                    </LinearLayout>

                    <View
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        >
                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <GridLayout
                                android:id="@+id/botones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:alignmentMode="alignMargins"
                                android:columnOrderPreserved="false"
                                />
                        </ScrollView>

                    </LinearLayout>

                    <View
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/textoracion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/successColor"
                    android:textSize="30dp"
                    android:gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonbartrue"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="Tiempo : "
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="0:30 "
                android:textColor="@color/white"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="Tiempo Restante : "
                android:textColor="@color/white"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="10:30 "
                android:textColor="@color/white"
                android:textSize="12dp"
                android:id="@+id/time_rest"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="puntaje :  "
                android:textColor="@color/white"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/puntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12dp"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="puntaje total :  "
                android:textColor="@color/white"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/puntaje_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12dp"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:orientation="horizontal"
            android:background="@color/adminU"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            >
            <TextView
                android:id="@+id/faltan_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digitalt"
                android:text="faltan 5 juegos"
                android:textColor="@color/white"
                android:textSize="13dp"

                />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:src="@drawable/logofund_grande"
        android:layout_gravity="right"
        />

</FrameLayout>